<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/colorMiscellaneousBackground">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar"
                android:id="@+id/imageZone"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/nameZone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/heebo_semi_bold"
            android:text="Selam"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="100dp"/>
        <TextView
            android:id="@+id/timeZone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="@color/colorTextHint"
            android:fontFamily="@font/heebo_regular"
            android:text=""
            android:layout_marginTop="20dp"
            android:layout_marginLeft="340dp"/>
        <TextView
            android:id="@+id/messageZone"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textSize="14sp"
            android:textColor="@color/colorTextHint"
            android:fontFamily="@font/heebo_light"
            android:text=""
            android:layout_marginTop="35dp"
            android:layout_marginLeft="100dp"/>
        <TextView
            android:id="@+id/lineZone"
            android:textSize="5sp"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="100dp"
            android:textColor="@color/colorTextHint"
            android:text="--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------"/>

    </RelativeLayout>

</RelativeLayout>