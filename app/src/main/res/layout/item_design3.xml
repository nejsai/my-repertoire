<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/colorMiscellaneousBackground">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/avatar"
                android:id="@+id/saykomatePic"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:cardCornerRadius="25dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="310dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@color/colorSearchBackground"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_done_24"
                android:id="@+id/declineChatZone"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:cardCornerRadius="25dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="360dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="centerCrop"
                android:background="@color/colorSearchBackground"
                android:src="@drawable/ic_baseline_clear_24"
                android:id="@+id/acceptChatZone"
                />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/matchingRateZone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/heebo_light"
            android:text="Found a saykomate with %80 match."
            android:layout_marginTop="5dp"
            android:layout_marginLeft="100dp"/>
        <TextView
            android:id="@+id/sendTimeZone"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="11sp"
            android:textColor="@color/colorTextHint"
            android:fontFamily="@font/heebo_regular"
            android:text=""
            android:layout_marginTop="10dp"
            android:layout_marginLeft="360dp"/>
        <TextView
            android:id="@+id/tagsZone"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textSize="14sp"
            android:textColor="@color/colorTextHint"
            android:fontFamily="@font/heebo_light"
            android:text=""
            android:layout_marginTop="35dp"
            android:layout_marginLeft="100dp"/>
        <TextView
            android:id="@+id/lineZoneForNotifications"
            android:textSize="5sp"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="100dp"
            android:textColor="@color/colorTextHint"
            android:text="--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------"/>

    </RelativeLayout>

</RelativeLayout>